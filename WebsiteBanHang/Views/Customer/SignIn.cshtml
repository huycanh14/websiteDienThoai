
@{
    Layout = null;
}
<div class="container">
    <div ng-controller="singInController as ctrl">
        <div id="login" style="font-size: 17px;">
            <h2 class="text-center text-white pt-5">Login form</h2>
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center" ng-if="ctrl.showLogin == true">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" ng-submit="ctrl.submit()">
                                <h3 class="text-center text-info">Login</h3>
                                <div class="form-group">
                                    <label for="username" class="text-info">Username:</label><br>
                                    <input type="email" name="username" class="form-control" ng-model="ctrl.user.email" required>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info">Password:</label><br>
                                    <input type="password" name="password" id="password" class="form-control" ng-model="ctrl.user.password" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-danger" style="font-size: 17px;" ng-click="ctrl.Login()">Submit</button>
                                </div>
                                <div id="register-link" class="text-right">
                                    <a href="" class="text-info" ng-click="ctrl.changShow()">Register here</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="sign-up" ng-if="ctrl.showLogin == false">
                    <div class="col-md-3"></div>
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" ng-submit="ctrl.submit()">
                                <h3 class="text-center text-info">Registration</h3>
                                <div class="form-group">
                                    <label for="username" class="text-info">Username:</label><br>
                                    <input type="text" name="username" class="form-control" ng-model="ctrl.account.fullname" required>
                                </div>
                                <div class="form-group">
                                    <label for="username" class="text-info">Email:</label><br>
                                    <input type="email" name="username" class="form-control" ng-model="ctrl.account.email" required>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info">Password:</label><br>
                                    <input type="password" name="password" class="form-control" ng-model="ctrl.account.password" required>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info">Confirm Password:</label><br>
                                    <input type="password" name="confirm_pass" class="form-control" ng-model="ctrl.confirm_pass" required>
                                </div>
                                <div class="form-group">
                                    <label for="username" class="text-info">Sex:</label><br>
                                    <input type="radio" name="gender" ng-value="1" ng-model="ctrl.account.gender"> Male<br>
                                    <input type="radio" name="gender" ng-value="0" ng-model="ctrl.account.gender"> Female<br>
                                </div>
                                <div class="form-group">
                                    <label for="username" class="text-info">Date of birthday:</label><br>
                                    <input type="date" name="username" class="form-control" ng-model="ctrl.date_of_birth" required>
                                </div>
                                <div class="form-group">
                                    <label for="username" class="text-info">Phone:</label><br>
                                    <input type="text" name="username" class="form-control" ng-model="ctrl.account.phone" required>
                                </div>
                                <div class="form-group">
                                    <label for="username" class="text-info">Address:</label><br>
                                    <input type="text" name="username" class="form-control" ng-model="ctrl.account.address" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-danger" style="font-size: 17px;" ng-click="ctrl.Registration()">Submit</button>
                                </div>
                                <div id="register-link" class="text-right">
                                    <a href="" class="text-info" ng-click="ctrl.changShow()">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/toastr.min.js"></script>