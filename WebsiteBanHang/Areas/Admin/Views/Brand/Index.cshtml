<div ng-controller="BrandController as ctrl">
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-5">Danh sách thương hiệu sản phẩm!</h1> <span class="float-right"><button class="btn btn-dark" ng-click="ctrl.showCreate()">Thêm danh mục</button></span>
            <hr class="my-4">
            <table class="table table-striped" border="1">
                <thead>
                    <tr class=" bg-success">
                        <th scope="col">#</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Miêu tả</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col" colspan="2" class="text-xl-center">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="brand in ctrl.brands">
                        <th scope="row">{{$index + 1}}</th>
                        <td>{{brand.name}}</td>
                        <td>{{brand.description}}</td>
                        <td ng-if="brand.status == 0">Disabled</td>
                        <td ng-if="brand.status == 1">Active</td>
                        <td ng-click="ctrl.getBrand(brand.id)"><a href=""><i class="fas fa-edit"></i> Edit</a></td>
                        <td ng-click="ctrl.deleteBrand(brand.id)" style="color:#4c84ff; cursor: pointer;"><i class="fas fa-backspace"></i> Delete</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <form id="formEditBrand" class="form-horizontal table table-striped" style="display: none;">
            <div class="form-group">
                <label>Name</label>
                <input type="text" ng-model="ctrl.brand.name" class="form-control" placeholder="" required>
            </div>
            <div class="form-group">
                <label>Description</label>
                <input type="text" ng-model="ctrl.brand.description" class="form-control" placeholder="">
            </div>
            <div>
                <label>Status</label>&emsp; &emsp;
                <input type="radio" ng-model="ctrl.brand.status" ng-value="0"> Disabled &emsp; &emsp;
                <input type="radio" ng-model="ctrl.brand.status" ng-value="1"> Active
            </div>
            <div class="text-xl-center">
                <input type="submit" name="submit" value="Submit" class="btn btn-info" ng-click="ctrl.updateBrand()" />
            </div>
        </form>

        <form id="formAddBrand" class="form-horizontal table table-striped" style="display: none;">
            <div class="form-group">
                <label>Name</label>
                <input type="text" ng-model="ctrl.brand.name" class="form-control" placeholder="" required>
            </div>
            <div class="form-group">
                <label>Description</label>
                <input type="text" ng-model="ctrl.brand.description" class="form-control" placeholder="">
            </div>
            <div>
                <label>Status</label>&emsp; &emsp;
                <input type="radio" ng-model="ctrl.brand.status" ng-value="0"> Disabled &emsp; &emsp;
                <input type="radio" ng-model="ctrl.brand.status" ng-value="1"> Active
            </div>
            <div class="text-xl-center">
                <input type="submit" name="submit" value="Submit" class="btn btn-info" ng-click="ctrl.createBrand()" />
            </div>
        </form>
    </div>
</div>
