
<div ng-controller="ProductController as ctrl">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 text-xl-left">
                <h3 class="font-weight-bold">Danh sách sản phẩm</h3>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col-xl-4 d-flex align-items-end">
                <input type="text" ng-keyup="ctrl.getkeys()" ng-model="ctrl.search" class="form-control" placeholder="Seacrh product">
            </div>

            <div class="col-xl-3">
                <label for="inputName">Thương hiệu</label>
                <select ng-options="x.name for x in ctrl.brands"
                        ng-model="ctrl.selectedBrand"
                        ng-change="ctrl.getkeys()" class="form-control">
                    <option value="">Unknown</option>
                </select>
            </div>

            <div class="col-xl-3">
                <label for="inputName">Danh mục sản phẩm</label>
                <select ng-options="x.name for x in ctrl.product_categories"
                        ng-model="ctrl.selectedProductCategory"
                        ng-change="ctrl.getkeys()" class="form-control">
                    <option value="">Unknown</option>
                </select>
            </div>
        </div>
        <div class="row">
            <table class="table table-striped" border="1">
                <thead>
                    <tr class="table-success">
                        <th scope="col">#</th>
                        <th scope="col">Code</th>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Thư mục</th>
                        <th scope="col">Thương hiệu</th>
                        <th scope="col">Giá</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Size</th>
                        <th scope="col">Hình ảnh</th>
                        <th scope="col">Sửa</th>
                        <th scope="col">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="product in ctrl.products">
                        <th scope="row">{{$index + 1}}</th>
                        <td>{{product.code}}</td>
                        <td>{{product.name}}</td>
                        <td>{{product.product_category_name}}</td>
                        <td>{{product.brand_name}}</td>
                        <td>{{ctrl.convertCurrency(product.price)}}</td>
                        <td>{{product.qty}}</td>
                        <td>{{product.size}}</td>
                        <td><img src="~/Image/{{product.img}}" style="width: 80px;" /></td>
                        <td><a href="#!/product_edit/{{product.id}}"><i class="fas fa-edit"></i> Edit</a></td>
                        <td ng-click="ctrl.deleteProduct(product.id)" style="color:#4c84ff; cursor: pointer;"><i class="fas fa-backspace"></i> Delete</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="container">
                    <nav aria-label="Page navigation">
                        <ul class="pagination" id="pagination"></ul>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</div>
